<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/master_border"
        android:text="" />

    <TextView
        android:id="@+id/wyn_textView"
        android:layout_width="290dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="54dp"

        android:layout_marginLeft="102dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="67dp"
        android:fontFamily="@font/segoe"
        android:text="What's your name?"
        android:textAlignment="center"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/fn_textView"
        android:layout_width="290dp"
        android:layout_height="46dp"
        android:layout_below="@+id/wyn_textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="57dp"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="64dp"
        android:fontFamily="@font/segoe"
        android:text="First Name"
        android:textAlignment="center"
        android:textSize="30dp" />

    <RelativeLayout
        android:id="@+id/fn_enter_box"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_below="@+id/fn_textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="15dp"
        android:background="@color/white">
    </RelativeLayout>

    <TextView
        android:id="@+id/ln_textView"
        android:layout_width="290dp"
        android:layout_height="46dp"
        android:layout_below="@+id/fn_enter_box"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="57dp"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="64dp"
        android:fontFamily="@font/segoe"
        android:text="Last Name"
        android:textAlignment="center"
        android:textSize="30dp" />

    <RelativeLayout
        android:id="@+id/ln_enter_box"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_below="@+id/ln_textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="15dp"
        android:background="@color/white">

        <!--        <EditText
            android:id="@+id/ln_editText"
            android:layout_width="218dp"
            android:layout_height="34dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="104dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="89dp"
            android:background="@color/white"
            android:imeOptions="actionSend"
            android:inputType="text"
            android:singleLine="true"></EditText>-->
    </RelativeLayout>

    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ln_enter_box"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="130dp"
        android:layout_marginTop="50dp"


        android:layout_marginEnd="131dp"
        android:background="@color/Button_color"
        android:backgroundTint="@color/Button_color"
        android:fontFamily="@font/segoe"
        android:text="Next"
        android:textColor="@color/black"
        android:textSize="22dp"></Button>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/master_border"
        android:text="" />

    <TextView
        android:id="@+id/wyn_textView"
        android:layout_width="290dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="61dp"

        android:layout_marginLeft="102dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="60dp"
        android:fontFamily="@font/segoe"
        android:text="What's your name?"
        android:textAlignment="center"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/fn_textView"
        android:layout_width="290dp"
        android:layout_height="46dp"
        android:layout_below="@+id/wyn_textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="61dp"
        android:fontFamily="@font/segoe"
        android:text="First Name"
        android:textAlignment="center"
        android:textSize="30dp" />

    <RelativeLayout
        android:id="@+id/fn_enter_box"
        android:layout_width="250dp"
        android:layout_height="33dp"
        android:layout_below="@+id/fn_textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="81dp"
        android:background="@color/white"></RelativeLayout>

    <TextView
        android:id="@+id/ln_textView"
        android:layout_width="290dp"
        android:layout_height="46dp"
        android:layout_below="@+id/fn_enter_box"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="61dp"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="60dp"
        android:fontFamily="@font/segoe"
        android:text="Last Name"
        android:textAlignment="center"
        android:textSize="30dp" />

    <RelativeLayout
        android:id="@+id/ln_enter_box"
        android:layout_width="250dp"
        android:layout_height="33dp"
        android:layout_below="@+id/ln_textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="81dp"
        android:background="@color/white">

    </RelativeLayout>

    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ln_enter_box"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="132dp"
        android:layout_marginTop="101dp"
        android:layout_marginEnd="129dp"
        android:background="@color/Button_color"
        android:backgroundTint="@color/Button_color"
        android:fontFamily="@font/segoe"
        android:text="Next"
        android:textColor="@color/black"
        android:textSize="22dp"></Button>
</RelativeLayout>
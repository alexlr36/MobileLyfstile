<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginScreenFrag">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/account_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="33dp"
            android:layout_marginTop="58dp"
            android:layout_marginEnd="33dp"
            android:background="#0000"
            android:fontFamily="@font/segoe"
            android:text="Welcome Back"
            android:textAlignment="center"
            android:textSize="50sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/Login_button"
            android:layout_width="173dp"
            android:layout_height="80dp"
            android:layout_below="@+id/password_enter_box"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="117dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="120dp"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/shippori"
            android:text="Login"
            android:textSize="22sp"
            tools:ignore="HardcodedText" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/forgot_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="130dp"
            android:layout_marginTop="558dp"
            android:layout_marginEnd="131dp"
            android:background="#0000"
            android:text="Forgot Password?"
            android:textColor="#828282"
            tools:ignore="HardcodedText" />

        <RelativeLayout
            android:id="@+id/email_enter_box"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_below="@+id/email_text"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="0dp">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/password_enter_box"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_below="@+id/enter_password_text"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="0dp">

        </RelativeLayout>

        <TextView
            android:id="@+id/email_text"
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/account_text"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="92dp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="95dp"
            android:background="#0000"
            android:fontFamily="@font/segoe"
            android:text="Enter Email"
            android:textAlignment="center"
            android:textSize="40sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/enter_password_text"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_enter_box"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="87dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="88dp"
            android:background="#0000"
            android:fontFamily="@font/segoe"
            android:text="Enter Password"
            android:textAlignment="center"
            android:textSize="30sp"
            tools:ignore="HardcodedText" />
    </RelativeLayout>
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/master_border"
        android:text="" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="145dp"
        android:layout_height="188dp"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="133dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="132dp"
        app:srcCompat="@mipmap/chad" />

    <LinearLayout
        android:id="@+id/info_RL_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="311dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/fn_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/segoe"
                android:text="First Name:"
                android:textAlignment="center"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/ln_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fn_TV"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/segoe"
                android:text="Last Name:"
                android:textAlignment="center"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/age_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ln_TV"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/segoe"
                android:text="Age:"
                android:textAlignment="center"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/sex_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/age_TV"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/segoe"
                android:text="Sex:"
                android:textAlignment="center"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/height_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sex_TV"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/segoe"
                android:text="Height:"
                android:textAlignment="center"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/weight_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/height_TV"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/segoe"
                android:text="Weight:"
                android:textAlignment="center"
                android:textSize="25dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <RelativeLayout
                android:id="@+id/fn_edit_box"
                android:layout_width="252dp"
                android:layout_height="33dp"
                android:layout_marginStart="61dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="60dp"
                android:background="@color/white" />

            <RelativeLayout
                android:id="@+id/ln_edit_box"
                android:layout_width="350dp"
                android:layout_height="33dp"
                android:layout_below="@+id/fn_edit_box"
                android:layout_marginStart="61dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="60dp"
                android:background="@color/white" />

            <RelativeLayout
                android:id="@+id/age_edit_box"
                android:layout_width="252dp"
                android:layout_height="33dp"
                android:layout_below="@+id/ln_edit_box"
                android:layout_marginStart="61dp"
                android:layout_marginTop="31dp"
                android:layout_marginEnd="60dp"
                android:background="@color/white" />

            <RelativeLayout
                android:id="@+id/sex_edix_box"
                android:layout_width="252dp"
                android:layout_height="33dp"
                android:layout_below="@+id/age_edit_box"
                android:layout_marginStart="61dp"
                android:layout_marginTop="31dp"
                android:layout_marginEnd="60dp"
                android:background="@color/white" />

            <RelativeLayout
                android:id="@+id/height_edit_box"
                android:layout_width="252dp"
                android:layout_height="33dp"
                android:layout_below="@+id/sex_edix_box"
                android:layout_marginStart="61dp"
                android:layout_marginTop="31dp"
                android:layout_marginEnd="60dp"
                android:background="@color/white" />

            <RelativeLayout
                android:id="@+id/weight_edit_box"
                android:layout_width="252dp"
                android:layout_height="33dp"
                android:layout_below="@+id/height_edit_box"
                android:layout_marginStart="61dp"
                android:layout_marginTop="31dp"
                android:layout_marginEnd="60dp"
                android:background="@color/white" />


        </RelativeLayout>

    </LinearLayout>


    <Button
        android:id="@+id/save_button"
        android:layout_width="143dp"
        android:layout_height="65dp"
        android:layout_below="@+id/info_RL_TV"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="240dp"
        android:layout_weight="2"
        android:background="@color/Button_color"
        android:backgroundTint="@color/Button_color"
        android:fontFamily="@font/segoe"
        android:text="Save"
        android:textColor="@color/black"
        android:textSize="22dp" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="143dp"
        android:layout_height="65dp"
        android:layout_below="@+id/info_RL_TV"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="240dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"

        android:background="@color/Button_color"
        android:backgroundTint="@color/Button_color"
        android:fontFamily="@font/segoe"
        android:text="Cancel"
        android:textColor="@color/black"
        android:textSize="15dp" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/master_border"
        android:text="" />

    <RelativeLayout
        android:id="@+id/Welcome_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/Smile"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="166dp"
            android:layout_marginEnd="103dp"
            android:fontFamily="@font/segoe"
            android:text="Take a profile picture!"
            android:textAlignment="center"
            android:textSize="50dp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pic_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Welcome_group">

        <ImageView
            android:id="@+id/iv_pic"
            android:scaleType="fitXY"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="25dp"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/Camera"
        android:layout_width="150dp"
        android:layout_height="59dp"
        android:layout_below="@+id/pic_group"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="129dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="132dp"
        android:background="@color/Button_color"
        android:backgroundTint="@color/Button_color"
        android:fontFamily="@font/segoe"
        android:text="Launch Camera"
        android:textColor="@color/black"
        android:textSize="15dp" />

</RelativeLayout>
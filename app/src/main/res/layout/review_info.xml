<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        app:srcCompat="@mipmap/chad" />

    <LinearLayout
        android:id="@+id/info_RL_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/fn_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/segoe"
                android:text="First Name:"
                android:textAlignment="center"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/ln_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fn_TV"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/segoe"
                android:text="Last Name:"
                android:textAlignment="center"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/age_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ln_TV"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/segoe"
                android:text="Age:"
                android:textAlignment="center"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/sex_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/age_TV"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/segoe"
                android:text="Sex:"
                android:textAlignment="center"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/height_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sex_TV"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/segoe"
                android:text="Height:"
                android:textAlignment="center"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/weight_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/height_TV"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/segoe"
                android:text="Weight:"
                android:textAlignment="center"
                android:textSize="25dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <TextView
                android:id="@+id/fn_actual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/segoe"
                android:text=""
                android:textAlignment="center"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/ln_actual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/segoe"
                android:layout_below="@+id/fn_actual"
                android:text=""
                android:textAlignment="center"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/age_actual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/segoe"
                android:layout_below="@+id/ln_actual"
                android:text=""
                android:textAlignment="center"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/sex_actual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/segoe"
                android:layout_below="@+id/age_actual"
                android:text=""
                android:textAlignment="center"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/height_actual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/segoe"
                android:layout_below="@+id/sex_actual"
                android:text=""
                android:textAlignment="center"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/weight_actual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/segoe"
                android:layout_below="@+id/height_actual"
                android:text=""
                android:textAlignment="center"
                android:textSize="25dp" />

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_RL_TV"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="130dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="131dp"
        android:background="@color/Button_color"
        android:backgroundTint="@color/Button_color"
        android:fontFamily="@font/segoe"
        android:text="Next"
        android:textColor="@color/black"
        android:textSize="22dp" />

</RelativeLayout>
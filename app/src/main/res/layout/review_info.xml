<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/master_border"
        android:text="" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        app:srcCompat="@mipmap/chad" />

    <LinearLayout
        android:id="@+id/info_RL_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/fn_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/segoe"
                android:text="First Name:"
                android:textAlignment="center"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/ln_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fn_TV"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/segoe"
                android:text="Last Name:"
                android:textAlignment="center"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/age_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ln_TV"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/segoe"
                android:text="Age:"
                android:textAlignment="center"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/sex_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/age_TV"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/segoe"
                android:text="Sex:"
                android:textAlignment="center"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/height_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sex_TV"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/segoe"
                android:text="Height:"
                android:textAlignment="center"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/weight_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/height_TV"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/segoe"
                android:text="Weight:"
                android:textAlignment="center"
                android:textSize="25dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <TextView
                android:id="@+id/review_actual0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/segoe"
                android:text=""
                android:textAlignment="center"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/review_actual1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/segoe"
                android:layout_below="@+id/review_actual0"
                android:text=""
                android:textAlignment="center"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/review_actual2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/segoe"
                android:layout_below="@+id/review_actual1"
                android:text=""
                android:textAlignment="center"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/review_actual3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/segoe"
                android:layout_below="@+id/review_actual2"
                android:text=""
                android:textAlignment="center"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/review_actual4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/segoe"
                android:layout_below="@+id/review_actual3"
                android:text=""
                android:textAlignment="center"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/review_actual5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/segoe"
                android:layout_below="@+id/review_actual4"
                android:text=""
                android:textAlignment="center"
                android:textSize="25dp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_RL_TV"
        android:layout_marginTop="5dp"
        android:gravity="center">
    <Button
        android:id="@+id/edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:background="@color/Button_color"
        android:backgroundTint="@color/Button_color"
        android:fontFamily="@font/segoe"
        android:text="Edit"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:layout_weight="2"/>

        <Button
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/Button_color"
            android:backgroundTint="@color/Button_color"
            android:fontFamily="@font/segoe"
            android:text="Create Account"

            android:textColor="@color/black"
            android:textSize="22dp"
            android:layout_weight="1"/>
    </LinearLayout>

</RelativeLayout>
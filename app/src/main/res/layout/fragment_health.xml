<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HealthFrag">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:ignore="UselessParent">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="344dp"
            android:clickable="true"
            android:visibility="gone"
            app:backgroundTint="@color/white"
            app:fabSize="mini"
            app:srcCompat="@drawable/warning_bold" />
        <ImageView
            android:id="@+id/pfp_box"
            android:layout_width="138dp"
            android:layout_height="142dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="19dp"
            android:contentDescription="Profile Image"
            tools:ignore="HardcodedText"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/fire_icon"
            android:layout_width="50dp"
            android:layout_height="44dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="259dp"
            android:layout_marginEnd="316dp"
            android:background="@drawable/fire_simple_bold"
            android:contentDescription="Fire Icon"
            android:translationZ="100dp"
            android:visibility="visible"
            app:tint="#F40B0B"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/barbell_icon"
            android:layout_width="50dp"
            android:layout_height="44dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="395dp"
            android:layout_marginEnd="316dp"
            android:background="@drawable/barbell_bold"
            android:contentDescription="Workout Icon"
            android:translationZ="100dp"
            android:visibility="visible"
            app:tint="#F40B0B"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/currentGoal"
            android:layout_width="171dp"
            android:layout_height="123dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="219dp"
            android:background="@drawable/rounded_corner_text"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/shippori"
            android:gravity="center"
            android:text="Current Goal:"
            android:textAlignment="center"
            android:textSize="17sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/calorieGoal"
            android:layout_width="350dp"
            android:layout_height="98dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="233dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rounded_corner_text"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/shippori"
            android:gravity="center"
            android:text="Calorie Goal:"
            android:textAlignment="center"
            android:textSize="23sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/activityGoal"
            android:layout_width="330dp"
            android:layout_height="98dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="370dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rounded_corner_text"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/shippori"
            android:gravity="center"
            android:text="Activity Goal:"
            android:textAlignment="center"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/modifyGoalsButton"
            android:layout_width="171dp"
            android:layout_height="92dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="539dp"
            android:layout_marginEnd="118dp"
            android:text="Modify Goals"
            android:textSize="17sp"
            tools:ignore="HardcodedText" />

        <RelativeLayout
            android:id="@+id/action_bar_fragment"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp" />

    </RelativeLayout>
</FrameLayout>
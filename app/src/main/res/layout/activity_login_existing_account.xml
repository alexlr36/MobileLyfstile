<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/master_border"
        android:text="" />


    <TextView
        android:id="@+id/account_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="37dp"
        android:fontFamily="@font/segoe"
        android:text="Welcome Back"
        android:textAlignment="center"
        android:textSize="50dp" />

    <Button
        android:id="@+id/Login_button"
        android:layout_width="173dp"
        android:layout_height="80dp"
        android:layout_below="@+id/password_enter_box"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="117dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="120dp"
        android:background="@color/Button_color"
        android:backgroundTint="@color/Button_color"
        android:fontFamily="@font/segoe"
        android:text="Login"
        android:textColor="@color/black"
        android:textSize="22dp"></Button>

    <Button
        android:id="@+id/forgot_pass"
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Login_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="96dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="101dp"
        android:background="@color/BG_color"
        android:text="Forgot Password"
        android:textAlignment="center"
        android:textColor="@color/Border_color"></Button>

    <RelativeLayout
        android:id="@+id/email_enter_box"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_below="@+id/email_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="0dp">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/password_enter_box"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_below="@+id/enter_password_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="0dp">

    </RelativeLayout>

    <TextView
        android:id="@+id/email_text"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/account_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="92dp"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="95dp"
        android:fontFamily="@font/segoe"
        android:text="Enter Email"
        android:textAlignment="center"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/enter_password_text"
        android:layout_width="236dp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/email_enter_box"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="87dp"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="88dp"
        android:fontFamily="@font/segoe"
        android:text="Enter Password"
        android:textAlignment="center"
        android:textSize="30dp" />


</RelativeLayout>
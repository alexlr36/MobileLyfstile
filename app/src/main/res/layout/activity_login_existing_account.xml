<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/master_border"
        android:text="" />

    <RelativeLayout
        android:id="@+id/welcome_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/account_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="97dp"
            android:layout_marginLeft="102dp"
            android:layout_marginTop="61dp"
            android:layout_marginEnd="105dp"
            android:fontFamily="@font/segoe"
            android:text="Welcome Back"
            android:textAlignment="center"
            android:textSize="50dp" />


    </RelativeLayout>

    <TextView
        android:id="@+id/email_text"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome_group"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="93dp"

        android:layout_marginLeft="102dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="94dp"
        android:fontFamily="@font/segoe"
        android:text="Enter Email"
        android:textAlignment="center"
        android:textSize="40dp" />


    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome_group"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="130dp"
        android:layout_marginTop="454dp"
        android:layout_marginEnd="131dp"
        android:background="@color/Button_color"
        android:backgroundTint="@color/Button_color"
        android:fontFamily="@font/segoe"
        android:text="Next"
        android:textColor="@color/black"
        android:textSize="22dp"></Button>


    <TextView
        android:id="@+id/enter_password_text"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome_group"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="91dp"

        android:layout_marginLeft="102dp"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="93dp"
        android:fontFamily="@font/segoe"
        android:text="Enter Password"
        android:textAlignment="center"
        android:textSize="30dp" />

    <RelativeLayout
        android:id="@+id/email_enter_box"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_below="@+id/email_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp" />

    <RelativeLayout
        android:id="@+id/password_enter_box"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_below="@+id/enter_password_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="3dp" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="700dp"
        android:layout_height="408dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="133dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="127dp"
        app:srcCompat="@mipmap/chad" />

    <LinearLayout
        android:id="@+id/info_RL_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="441dp"
            android:layout_height="978dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/fn_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:background="#0000"
                android:fontFamily="@font/shippori"
                android:text="First Name:"
                android:textAlignment="center"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/ln_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fn_TV"
                android:layout_marginTop="101dp"
                android:background="#0000"
                android:fontFamily="@font/shippori"
                android:text="Last Name:"
                android:textAlignment="center"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/age_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ln_TV"
                android:layout_marginTop="103dp"
                android:background="#0000"
                android:fontFamily="@font/shippori"
                android:text="Age:"
                android:textAlignment="center"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/sex_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/age_TV"
                android:layout_marginTop="104dp"
                android:background="#0000"
                android:fontFamily="@font/shippori"
                android:text="Sex:"
                android:textAlignment="center"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/height_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sex_TV"
                android:layout_marginTop="109dp"
                android:background="#0000"
                android:fontFamily="@font/shippori"
                android:text="Height:"
                android:textAlignment="center"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/weight_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/height_TV"
                android:layout_marginTop="104dp"
                android:background="#0000"
                android:fontFamily="@font/shippori"
                android:text="Weight:"
                android:textAlignment="center"
                android:textSize="40dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/first_name_box"
                    android:layout_width="191dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="125dp"
                    android:layout_marginEnd="384dp"
                    android:background="@drawable/rounded_corner_text"
                    android:fontFamily="@font/shippori"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/last_name_box"
                    android:layout_width="191dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/first_name_box"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="132dp"
                    android:layout_marginEnd="384dp"
                    android:background="@drawable/rounded_corner_text"
                    android:fontFamily="@font/shippori"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/age_box"
                    android:layout_width="191dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/last_name_box"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="122dp"
                    android:layout_marginEnd="386dp"
                    android:background="@drawable/rounded_corner_text"
                    android:fontFamily="@font/shippori"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/sex_box"
                    android:layout_width="191dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/age_box"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="120dp"
                    android:layout_marginEnd="388dp"
                    android:background="@drawable/rounded_corner_text"
                    android:fontFamily="@font/shippori"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/height_box"
                    android:layout_width="191dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sex_box"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="137dp"
                    android:layout_marginEnd="385dp"
                    android:background="@drawable/rounded_corner_text"
                    android:fontFamily="@font/shippori"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/weight_box"
                    android:layout_width="191dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/height_box"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="111dp"
                    android:layout_marginEnd="381dp"
                    android:background="@drawable/rounded_corner_text"
                    android:fontFamily="@font/shippori"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="22dp" />

            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>


    <Button
        android:id="@+id/edit_button"
        android:layout_width="143dp"
        android:layout_height="65dp"
        android:layout_below="@+id/info_RL_TV"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="131dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="130dp"
        android:layout_weight="2"
        android:fontFamily="@font/shippori"
        android:text="Edit"
        android:textColor="@color/black"
        android:textSize="40dp" />

    <Button
        android:id="@+id/create_button"
        android:layout_width="143dp"
        android:layout_height="65dp"
        android:layout_below="@+id/info_RL_TV"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="137dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="132dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:fontFamily="@font/shippori"
        android:text="Create Account"
        android:textColor="@color/black"
        android:textSize="40dp" />


</RelativeLayout>
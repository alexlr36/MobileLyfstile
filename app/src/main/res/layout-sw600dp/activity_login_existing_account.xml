<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/account_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="33dp"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="134dp"
        android:layout_marginEnd="34dp"
        android:background="#0000"
        android:fontFamily="@font/segoe"
        android:text="Welcome Back"
        android:textAlignment="center"
        android:textSize="65dp" />

    <Button
        android:id="@+id/Login_button"
        android:layout_width="173dp"
        android:layout_height="80dp"
        android:layout_below="@+id/password_enter_box"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="118dp"
        android:layout_marginTop="165dp"
        android:layout_marginEnd="119dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="@font/shippori"
        android:text="Login"
        android:textSize="60dp"></Button>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/forgot_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="130dp"
        android:layout_marginTop="1460dp"
        android:layout_marginEnd="131dp"
        android:background="#0000"
        android:text="Forgot Password?"
        android:textColor="#828282"
        android:textSize="30dp" />

    <RelativeLayout
        android:id="@+id/email_enter_box"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_below="@+id/email_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="201dp"
        android:layout_marginEnd="-3dp">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/password_enter_box"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_below="@+id/enter_password_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="209dp"
        android:layout_marginEnd="-2dp">

    </RelativeLayout>

    <TextView
        android:id="@+id/email_text"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/account_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="98dp"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="118dp"
        android:layout_marginEnd="89dp"
        android:background="#0000"
        android:fontFamily="@font/segoe"
        android:text="Enter Email"
        android:textAlignment="center"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/enter_password_text"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_enter_box"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="89dp"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="201dp"
        android:layout_marginEnd="86dp"
        android:background="#0000"
        android:fontFamily="@font/segoe"
        android:text="Enter Password"
        android:textAlignment="center"
        android:textSize="50dp" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    >

    <TextView
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="166dp"
        android:background="#0000"
        android:fontFamily="@font/shippori"
        android:gravity="center"
        android:text="What do you want to do?"
        android:textSize="30dp"></TextView>

    <RelativeLayout
        android:id="@+id/action_bar_fragment"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="786dp">

    </RelativeLayout>

    <Button
        android:id="@+id/Maps_Gym"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_below="@+id/Maps_Parks"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="206dp"
        android:text="Gyms" />

    <Button
        android:id="@+id/Maps_Parks"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_below="@+id/Maps_Hiking"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="206dp"
        android:text="Parks" />

    <Button
        android:id="@+id/Maps_Restaurants"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_below="@+id/Maps_Gym"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="207dp"
        android:text="Restaurants" />

    <Button
        android:id="@+id/Maps_Hiking"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="279dp"
        android:layout_marginEnd="205dp"
        android:text="Hiking" />

</RelativeLayout>
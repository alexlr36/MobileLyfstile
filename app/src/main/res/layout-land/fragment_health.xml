<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:id="@+id/pfp_box"
        android:layout_width="92dp"
        android:layout_height="95dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"

        android:layout_marginTop="15dp"
        android:layout_marginEnd="18dp"
        android:contentDescription="Profile Picture"
        tools:ignore="HardcodedText"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/fire_icon"
        android:layout_width="50dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="506dp"
        android:background="@drawable/fire_simple_bold"
        android:contentDescription="Calorie Icon"
        android:translationZ="100dp"
        android:visibility="visible"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/barbell_icon"
        android:layout_width="50dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="213dp"
        android:layout_marginEnd="504dp"
        android:background="@drawable/barbell_bold"
        android:contentDescription="Activity Icon"
        android:translationZ="100dp"
        android:visibility="visible"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/activityGoal"
        android:layout_width="427dp"
        android:layout_height="91dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="172dp"
        android:background="@drawable/rounded_corner_text"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/shippori"
        android:gravity="center"
        android:text="Activity Goal:"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/calorieGoal"
        android:layout_width="425dp"
        android:layout_height="92dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="175dp"
        android:background="@drawable/rounded_corner_text"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/shippori"
        android:gravity="center"
        android:text="Calorie Goal:"
        android:textAlignment="center"
        android:textSize="23sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/currentGoal"
        android:layout_width="241dp"
        android:layout_height="84dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="273dp"
        android:background="@drawable/rounded_corner_text"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/shippori"
        android:gravity="center"
        android:text="Current Goal:"
        android:textAlignment="center"
        android:textSize="17sp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/modifyGoalsButton"
        android:layout_width="235dp"
        android:layout_height="62dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="269dp"
        android:layout_marginBottom="13dp"
        android:text="Modify Goals"
        tools:ignore="HardcodedText" />

    <RelativeLayout
        android:id="@+id/action_bar_fragment"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="669dp" />
</RelativeLayout>
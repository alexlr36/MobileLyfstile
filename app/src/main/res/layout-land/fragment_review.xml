<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="217dp"
        android:layout_height="197dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="496dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="18dp"
        app:srcCompat="@mipmap/chad" />

    <Button
        android:id="@+id/edit_button"
        android:layout_width="197dp"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="221dp"
        android:layout_marginEnd="30dp"
        android:layout_weight="2"
        android:fontFamily="@font/shippori"
        android:text="Edit"
        android:textColor="@color/black"
        android:textSize="22dp" />


    <Button
        android:id="@+id/create_button"
        android:layout_width="197dp"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:fontFamily="@font/shippori"
        android:text="Create Account"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <RelativeLayout
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/fn_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="31dp"
            android:background="#0000"
            android:fontFamily="@font/shippori"
            android:text="First Name:"
            android:textAlignment="center"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/ln_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fn_TV"
            android:layout_marginTop="35dp"
            android:background="#0000"
            android:fontFamily="@font/shippori"
            android:text="Last Name:"
            android:textAlignment="center"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/age_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ln_TV"
            android:layout_marginTop="35dp"
            android:background="#0000"
            android:fontFamily="@font/shippori"
            android:text="Age:"
            android:textAlignment="center"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/sex_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/age_TV"
            android:layout_marginTop="35dp"
            android:background="#0000"
            android:fontFamily="@font/shippori"
            android:text="Sex:"
            android:textAlignment="center"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/height_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sex_TV"
            android:layout_marginTop="35dp"
            android:background="#0000"
            android:fontFamily="@font/shippori"
            android:text="Height:"
            android:textAlignment="center"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/weight_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/height_TV"
            android:layout_marginTop="35dp"
            android:background="#0000"
            android:fontFamily="@font/shippori"
            android:text="Weight:"
            android:textAlignment="center"
            android:textSize="22dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/height_box"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sex_box"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="318dp"
        android:background="@drawable/rounded_corner_text"
        android:fontFamily="@font/shippori"
        android:text=""
        android:textAlignment="center"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/last_name_box"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_name_box"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="319dp"
        android:background="@drawable/rounded_corner_text"
        android:fontFamily="@font/shippori"
        android:text=""
        android:textAlignment="center"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/age_box"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/last_name_box"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="314dp"
        android:background="@drawable/rounded_corner_text"
        android:fontFamily="@font/shippori"
        android:text=""
        android:textAlignment="center"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/sex_box"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/age_box"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="320dp"
        android:background="@drawable/rounded_corner_text"
        android:fontFamily="@font/shippori"
        android:text=""
        android:textAlignment="center"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/weight_box"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/height_box"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="317dp"
        android:background="@drawable/rounded_corner_text"
        android:fontFamily="@font/shippori"
        android:text=""
        android:textAlignment="center"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/first_name_box"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="318dp"
        android:background="@drawable/rounded_corner_text"
        android:fontFamily="@font/shippori"
        android:text=""
        android:textAlignment="center"
        android:textSize="22dp" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/account_text"
        android:layout_width="320dp"
        android:layout_height="118dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="102dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="56dp"
        android:background="#0000"
        android:fontFamily="@font/shippori"
        android:text="Account"
        android:textAlignment="center"
        android:textSize="70sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/email_text"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="482dp"
        android:background="#0000"
        android:fontFamily="@font/shippori"
        android:text="Enter Email"
        android:textAlignment="center"
        android:textSize="30dp" />

    <Button
        android:id="@+id/next_button"
        android:layout_width="250dp"
        android:layout_height="117dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="237dp"
        android:layout_marginEnd="94dp"
        android:fontFamily="@font/shippori"
        android:text="Next"
        android:textColor="@color/black"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/enter_password_text"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="146dp"
        android:layout_marginEnd="479dp"
        android:background="#0000"
        android:fontFamily="@font/shippori"
        android:text="Enter Password"
        android:textAlignment="center"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/confirm_password_text"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="257dp"
        android:layout_marginEnd="453dp"
        android:background="#0000"
        android:fontFamily="@font/shippori"
        android:text="Confirm Password"
        android:textAlignment="center"
        android:textSize="25dp" />

    <RelativeLayout
        android:id="@+id/email_enter_box"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@+id/email_text"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="433dp" />

    <RelativeLayout
        android:id="@+id/password_enter_box"
        android:layout_width="300dp"
        android:layout_height="43dp"
        android:layout_below="@+id/enter_password_text"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="431dp" />

    <RelativeLayout
        android:id="@+id/confirm_password_enter_box"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@+id/confirm_password_text"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="427dp" />
</RelativeLayout>
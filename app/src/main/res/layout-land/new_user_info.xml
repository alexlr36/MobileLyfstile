<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/wyn_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"

        android:layout_marginStart="59dp"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="61dp"
        android:background="#0000"
        android:fontFamily="@font/shippori"
        android:text="What's your name?"
        android:textAlignment="center"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/fn_textView"
        android:layout_width="290dp"
        android:layout_height="46dp"
        android:layout_below="@+id/wyn_textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="60dp"
        android:background="#0000"
        android:fontFamily="@font/shippori"
        android:text="First Name"
        android:textAlignment="center"
        android:textSize="30dp" />

    <RelativeLayout
        android:id="@+id/fn_enter_box"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/fn_textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="83dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="78dp"></RelativeLayout>

    <TextView
        android:id="@+id/ln_textView"
        android:layout_width="290dp"
        android:layout_height="46dp"
        android:layout_below="@+id/fn_enter_box"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="63dp"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="58dp"
        android:background="#0000"
        android:fontFamily="@font/shippori"
        android:text="Last Name"
        android:textAlignment="center"
        android:textSize="30dp" />

    <RelativeLayout
        android:id="@+id/ln_enter_box"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ln_textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="81dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="80dp">

    </RelativeLayout>

    <Button
        android:id="@+id/next_button"
        android:layout_width="162dp"
        android:layout_height="73dp"
        android:layout_below="@+id/ln_enter_box"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="125dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="123dp"
        android:fontFamily="@font/shippori"
        android:text="Next"
        android:textColor="@color/black"
        android:textSize="22dp"></Button>

</RelativeLayout>